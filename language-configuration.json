{
    "comments": {
        "lineComment": "#",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^((?!#).)*(begin\\s*:\\s*\\w+\\s*\\w+\\s*;|begin\\s*:\\s*\\w+\\s*;)[^;\"'`]*$",
        "decreaseIndentPattern": "^((?!#).)*(end\\s*:\\s*\\w+;)$",
    },


}